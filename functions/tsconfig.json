{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": "./",
		"paths": {
			"@models/*": ["../shared/models/*"],
			"@shared/*": ["../shared/*"]
		},
		"lib": ["es2019"],
		"typeRoots": ["node_modules/@types"]
	},
	"compileOnSave": true,
	"include": ["src"]
}
