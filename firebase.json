{
	"database": {
		"rules": "database.rules.json"
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"source": "functions",
		"predeploy": [
			"npm --prefix \"$RESOURCE_DIR\" run lint",
			"npm --prefix \"$RESOURCE_DIR\" run build"
		]
	},
	"hosting": {
		"public": "./webapp/dist",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "/api/**",
				"function": "api"
			},
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"storage": {
		"rules": "storage.rules"
	},
	"emulators": {
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		}
	}
}
